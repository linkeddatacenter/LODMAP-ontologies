resource:domain a bgo:Domain ;
	# Here write some thing about your document (ie the data driven document domain metadata)

	bgo:title "Live test of LODMAP2D" ;
    bgo:description "Here a short description of the data domain" ;
    bgo:abstract "These are **demo data** without a real meaning."^^bgo:MDString ;


    # add an item to default navigation menu
    bgo:hasNavigationMenu [
    	bgo:withCustomMenuItems (
    		[
				bgo:icon "far fa-building" ;
				bgo:title "reference implementation..." ;
				bgo:link <https://github.com/linkeddatacenter/LODMAP2D>
			]
		) 	
    ] ;

    # Use the Option menu with two external links
    bgo:hasOptionMenu [
    	bgo:withCustomMenuItems (
    		[
				bgo:icon "far fa-building" ;
				bgo:title "about LODMAP2D..." ;
				bgo:link <http://bit.ly/lodmap2d_p>
			]
    		[
				bgo:icon "fas fa-shield-alt" ;
				bgo:title "about WebID-OIDC..." ;
				bgo:link <https://github.com/solid/webid-oidc-spec>
			]
		)
    ] ;

    # Add just a couple of short cuts icons to footer
    bgo:hasFooterMenu [
    	bgo:withCustomMenuItems (
    		[
		    	bgo:icon "fas fa-table" ;
				bgo:link "/table"^^bgo:route  # this is internal link example, application dependent
			]
    		[
		    	bgo:icon "fab fa-github-square" ;
		    	bgo:title "GitHub" ;
				bgo:link <https://github.com/linkeddatacenter/LODMAP2D>
			]
		)
    ] ;

    # This domain likes social
    bgo:hasSocialSharing  "true"^^xsd:boolean;

    # This should be used if copyright is not present
    bgo:hasCopyrigth "(c) [LinkedData.Center](http://linkeddata.center)"^^bgo:MDString ;
    
    bgo:hasOverview resource:overview ;
    bgo:hasTableView resource:table_view ;
    bgo:hasCredits resource:credits_page ;
    bgo:hasTerms resource:terms_page ;
    bgo:hasAccountView [
	    bgo:amountFormatter resource:amount_formatter;
	    bgo:referenceFormatter resource:amount_formatter;
	    bgo:trendFormatter resource:trend_formatter;
	    
    	bgo:hasHistoricalPerspective [
			bgo:title "Storico dell'azione" ;
		    bgo:amountFormatter resource:smart_formatter
    	];
    	bgo:hasBreakdownPerspective [
			bgo:title "Dettaglio capitoli di spesa" ;
		    bgo:amountFormatter resource:smart_formatter
    	]
    ]
.

############################################
# Formatters
############################################
resource:filtered_total_formatter a bgo:FilteredTotalFormatter ;
	bgo:format "Totale:  € %s" ;
	bgo:filteredFormat "In evidenza:  € %s"^^bgo:Template  ;
	bgo:precision 2 ;
	bgo:nan "non definito" ;
	bgo:percentageFormatter [
		bgo:format " ( %s% del tot.)"^^bgo:Template  ;
		bgo:precision 2 ;
		bgo:maxValue 100.0 ;
		bgo:minValue 1.0 ; 
		bgo:nan "" ;
		bgo:moreThanMax ""^^bgo:Template ;
		bgo:lessThanMin " (< 1% del tot.)"^^bgo:Template
	]
.

resource:amount_formatter a bgo:NumberFormatter ;
	bgo:format "€ %s"^^bgo:Template  ;
	bgo:precision 2 ;
	bgo:nan "non definito" 
.

resource:smart_formatter a bgo:SmartNumberFormatter ;
	bgo:format "€ %s"^^bgo:Template  ;
	bgo:precision 0 ;
	bgo:maxValue 999999999.99 ;
	bgo:minValue 0.005 ; 
	bgo:nan "non definito" ;
	bgo:moreThanMax "> 1 Mrd"^^bgo:Template ;
	bgo:lessThanMin "0."^^bgo:Template
.

resource:trend_formatter a bgo:SmartNumberFormatter ;
	bgo:format "%s%"^^bgo:Template  ;
	bgo:precision 2 ;
	bgo:maxValue 100.0 ;
	bgo:minValue -100.0 ; 
	bgo:nan "N.A." ;
	bgo:moreThanMax ">100%"^^bgo:Template ;
	bgo:lessThanMin "<100%"^^bgo:Template
.


